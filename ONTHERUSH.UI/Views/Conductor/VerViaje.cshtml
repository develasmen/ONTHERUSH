@model List<ONTHERUSH.Abstracciones.DTOs.ParadaAsignadaDto>

@{
    Layout = null;

    var hayParadas = Model != null && Model.Any();

    bool EsRecogido(string? s) =>
        string.Equals((s ?? "").Trim(), "Recogido", StringComparison.OrdinalIgnoreCase);

    var todosRecogidos = hayParadas && Model.All(x => EsRecogido(x.Estado));

    var destinoAeropuerto = Uri.EscapeDataString("Aeropuerto Internacional Juan Santamaría");
    var urlAeropuerto = $"https://www.google.com/maps/dir/?api=1&destination={destinoAeropuerto}";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ver viaje - ON THE RUSH</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/pages/conductor-pasajeros.css" />
</head>
<body>
    <div class="page-wrap">

        <div class="page-header">
            <div>
                <h1>Ver viaje</h1>
                <p>Reservas asignadas en orden. Abre Google Maps para ir a recoger a cada cliente.</p>
            </div>

            <a class="btn-link btn-secondary" href="@Url.Action("PanelConductor","Conductor")">
                ← Volver al panel
            </a>
        </div>

        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success" style="margin-bottom:12px;">
                @TempData["Mensaje"]
            </div>
        }

        @if (!hayParadas)
        {
            <div class="card" style="padding:16px;">
                <b>No tienes un viaje activo.</b>
                <div style="color:#666; margin-top:6px;">
                    Cuando el administrador te asigne reservas, te aparecerán aquí.
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Orden</th>
                            <th>Cliente</th>
                            <th>Ubicación</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.OrderBy(x => x.Orden))
                        {
                            var destino = Uri.EscapeDataString(p.Direccion ?? "");
                            var googleMapsUrl = $"https://www.google.com/maps/dir/?api=1&destination={destino}";

                            var estadoTxt = (p.Estado ?? "").Trim();
                            var recogido = string.Equals(estadoTxt, "Recogido", StringComparison.OrdinalIgnoreCase);

                            var claseBadge = recogido ? "badge badge-recogido" : "badge badge-pendiente";

                            <tr>
                                <td>@p.Orden</td>
                                <td>@p.NombreCliente</td>
                                <td>@p.Direccion</td>
                                <td><span class="@claseBadge">@estadoTxt</span></td>
                                <td>
                                    <div class="actions" style="display:flex; gap:10px; flex-wrap:wrap;">
                                        <a class="btn-link btn-primary" href="@googleMapsUrl" target="_blank" rel="noopener">
                                            Ir a recoger →
                                        </a>

                                        @if (!recogido)
                                        {
                                            <form asp-action="MarcarRecogido" asp-controller="Conductor" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@p.Id" />
                                                <button type="submit" class="btn-link btn-secondary">
                                                    Marcar recogido
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (todosRecogidos)
            {
                <div style="margin-top:16px; display:flex; gap:10px; flex-wrap:wrap;">
                    <a class="btn-link btn-primary" href="@urlAeropuerto" target="_blank" rel="noopener">
                        Ir al Aeropuerto Juan Santamaría →
                    </a>

                    <form asp-action="FinalizarViaje" asp-controller="Conductor" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-link btn-secondary">
                            Finalizar viaje
                        </button>
                    </form>
                </div>
            }
        }
    </div>
</body>
</html>