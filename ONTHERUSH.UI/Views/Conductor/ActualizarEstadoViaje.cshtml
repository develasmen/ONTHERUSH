@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Actualizar estado de viaje - ON THE RUSH</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/components/buttons.css" />
    <link rel="stylesheet" href="~/css/components/forms.css" />
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <h1>Actualizar estado de viaje</h1>
                <p>Seleccione el viaje y el resultado de la actualización.</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }

            @if (ViewBag.Info != null)
            {
                <div class="alert alert-warning">
                    @ViewBag.Info
                </div>
            }

            @if (ViewBag.Exito != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Exito
                </div>
            }

            <form asp-action="ActualizarEstadoViaje" asp-controller="Conductor" method="post" class="auth-form">
                <div class="form-group">
                    <label for="idViaje">ID del viaje</label>
                    <input type="text" id="idViaje" name="idViaje" class="form-input" required />
                </div>

                <div class="form-group">
                    <label for="accion">Resultado (simulación)</label>
                    <select id="accion" name="accion" class="form-input">
                        <option value="ok">Estado exitoso</option>
                        <option value="error">Error de actualización</option>
                        <option value="yaActualizada">Ruta ya actualizada</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">
                    Actualizar
                </button>

                <button type="button"
                        class="btn btn-secondary"
                        onclick="window.location.href='@Url.Action("PanelConductor", "Conductor")'">
                    Volver al panel de conductor
                </button>
            </form>
        </div>
    </div>
</body>
</html>
