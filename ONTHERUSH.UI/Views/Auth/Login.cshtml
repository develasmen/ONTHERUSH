@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - ON THE RUSH</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/components/buttons.css" />
    <link rel="stylesheet" href="~/css/components/forms.css" />
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-logo">
                <img src="~/images/logo.jpeg" alt="ON THE RUSH Logo" />
            </div>
            
            <form method="post" class="auth-form">
                <div class="form-group">
                    <label for="email">Correo Electrónico</label>
                    <input type="email" id="email" name="email" class="form-input" required />
                </div>
                
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" class="form-input" required />
                </div>
                <div class="forgot-password">
                    <a href="@Url.Action("ForgotPassword", "Auth")">¿Olvidaste tu contraseña?</a>
                </div>

                <button type="submit" class="btn btn-primary">Ingresar</button>
                <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Register", "Auth")'">Regístrate</button>
            </form>
        </div>
    </div>
</body>
</html>