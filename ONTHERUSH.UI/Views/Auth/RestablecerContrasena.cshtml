@{
    ViewData["Title"] = "Restablecer contraseña";
    var email = ViewBag.Email as string ?? "";
    var token = ViewBag.Token as string ?? "";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-5">

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4 p-md-5">

                    <div class="text-center mb-4">
                        <h2 class="mb-1 fw-bold">Restablecer contraseña</h2>
                        <p class="text-muted mb-0">
                            Ingresá una contraseña nueva para tu cuenta.
                        </p>
                    </div>

                    @* Mensajes *@
                    @if (ViewBag.Exito != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewBag.Exito
                        </div>
                    }

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    <form asp-action="RestablecerContrasena" method="post" class="mt-3">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="email" value="@email" />
                        <input type="hidden" name="token" value="@token" />

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Correo</label>
                            <input type="email" class="form-control" value="@email" disabled />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Nueva contraseña</label>
                            <div class="input-group">
                                <input type="password"
                                       class="form-control"
                                       id="nuevaContrasena"
                                       name="nuevaContrasena"
                                       placeholder="Ingrese la nueva contraseña"
                                       required />
                                <button class="btn btn-outline-secondary" type="button" id="btnVer1">
                                    Ver
                                </button>
                            </div>
                            <div class="form-text">
                                Debe cumplir las reglas de seguridad del sistema.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Confirmar contraseña</label>
                            <div class="input-group">
                                <input type="password"
                                       class="form-control"
                                       id="confirmarContrasena"
                                       name="confirmarContrasena"
                                       placeholder="Repita la nueva contraseña"
                                       required />
                                <button class="btn btn-outline-secondary" type="button" id="btnVer2">
                                    Ver
                                </button>
                            </div>
                            <div class="invalid-feedback d-block" id="msgNoCoinciden" style="display:none;">
                                Las contraseñas no coinciden.
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100" id="btnSubmit">
                            Guardar contraseña
                        </button>

                        <div class="text-center mt-3">
                            <a asp-controller="Auth" asp-action="Login" class="text-decoration-none">
                                Volver a iniciar sesión
                            </a>
                        </div>
                    </form>

                </div>
            </div>

            <div class="text-center mt-3 text-muted small">
                © @DateTime.Now.Year ONTHERUSH
            </div>

        </div>
    </div>
</div>

@section Scripts {
<script>
    (function () {
        const pass1 = document.getElementById('nuevaContrasena');
        const pass2 = document.getElementById('confirmarContrasena');
        const msg = document.getElementById('msgNoCoinciden');
        const btn = document.getElementById('btnSubmit');

        function toggle(input, btnId) {
            const btnEl = document.getElementById(btnId);
            btnEl.addEventListener('click', function () {
                const isPassword = input.type === 'password';
                input.type = isPassword ? 'text' : 'password';
                btnEl.textContent = isPassword ? 'Ocultar' : 'Ver';
            });
        }

        function validarCoincidencia() {
            if (!pass1.value || !pass2.value) {
                msg.style.display = 'none';
                btn.disabled = false;
                return;
            }

            if (pass1.value !== pass2.value) {
                msg.style.display = 'block';
                btn.disabled = true;
            } else {
                msg.style.display = 'none';
                btn.disabled = false;
            }
        }

        toggle(pass1, 'btnVer1');
        toggle(pass2, 'btnVer2');

        pass1.addEventListener('input', validarCoincidencia);
        pass2.addEventListener('input', validarCoincidencia);
    })();
</script>
}
