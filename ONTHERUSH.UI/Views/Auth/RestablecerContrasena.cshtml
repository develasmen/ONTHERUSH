@{
    Layout = null;
    var email = ViewBag.Email as string;
    var token = ViewBag.Token as string;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restablecer contraseña - ON THE RUSH</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/components/buttons.css" />
    <link rel="stylesheet" href="~/css/components/forms.css" />
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <h1>Restablecer contraseña</h1>
                <p>Ingrese su nueva contraseña.</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @if (ViewBag.Exito != null)
            {
                <div class="alert alert-success">@ViewBag.Exito</div>
            }

            <form asp-action="RestablecerContrasena"
                  asp-controller="Auth"
                  method="post"
                  class="auth-form">

                @Html.AntiForgeryToken()

                <!-- Datos ocultos necesarios para Identity -->
                <input type="hidden" name="email" value="@email" />
                <input type="hidden" name="token" value="@token" />

                <div class="form-group">
                    <label for="nueva">Nueva contraseña</label>
                    <input type="password"
                           id="nueva"
                           name="nuevaContrasena"
                           class="form-input"
                           required />
                </div>

                <div class="form-group">
                    <label for="confirmar">Confirmar contraseña</label>
                    <input type="password"
                           id="confirmar"
                           name="confirmarContrasena"
                           class="form-input"
                           required />
                </div>

                <button type="submit" class="btn btn-primary">
                    Cambiar contraseña
                </button>

                <button type="button"
                        class="btn btn-secondary"
                        onclick="window.location.href='@Url.Action("Login","Auth")'">
                    Volver al inicio
                </button>
            </form>
        </div>
    </div>
</body>
</html>
