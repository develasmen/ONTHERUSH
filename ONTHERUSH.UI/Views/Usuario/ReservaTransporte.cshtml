@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reserva de transporte - ON THE RUSH</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/components/buttons.css" />
    <link rel="stylesheet" href="~/css/components/forms.css" />
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <h1>Reserva de transporte</h1>
                <p>Complete sus datos personales y la información del viaje.</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }

            @if (ViewBag.Exito != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Exito
                </div>
            }

            <form asp-action="ReservaTransporte" asp-controller="Usuario" method="post" class="auth-form">
                <h3>Datos personales</h3>

                <div class="form-group">
                    <label for="nombre">Nombre completo</label>
                    <input type="text" id="nombre" name="nombre" class="form-input" required />
                </div>

                <div class="form-group">
                    <label for="cedula">Cédula</label>
                    <input type="text" id="cedula" name="cedula" class="form-input" required />
                </div>

                <div class="form-group">
                    <label for="correo">Correo electrónico</label>
                    <input type="email" id="correo" name="correo" class="form-input" required />
                </div>

                <div class="form-group">
                    <label for="telefono">Teléfono</label>
                    <input type="text" id="telefono" name="telefono" class="form-input" required />
                </div>

                <h3>Datos del viaje</h3>

                <div class="form-group">
                    <label for="origen">Origen</label>
                    <input type="text" id="origen" name="origen" class="form-input" required />
                </div>

                <div class="form-group">
                    <label for="destino">Destino</label>
                    <input type="text" id="destino" name="destino" class="form-input" required />
                </div>

                <div class="form-group">
                    <label for="fecha">Fecha del viaje</label>
                    <input type="date" id="fecha" name="fecha" class="form-input" required />
                </div>

                <div class="form-group">
                    <label for="horario">Horario aproximado</label>
                    <input type="time" id="horario" name="horario" class="form-input" required />
                </div>

                <div class="form-group">
                    <label for="cantidadPasajeros">Cantidad de pasajeros</label>
                    <input type="number" id="cantidadPasajeros" name="cantidadPasajeros" class="form-input" min="1" required />
                </div>

                <button type="submit" class="btn btn-primary">
                    Reservar
                </button>

                <button type="button"
                        class="btn btn-secondary"
                        onclick="window.location.href='@Url.Action("PanelUsuario", "Auth")'">
                    Volver al panel de usuario
                </button>
            </form>
        </div>
    </div>
</body>
</html>
